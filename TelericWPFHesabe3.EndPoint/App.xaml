                <ResourceDictionary Source="/Dictionary/TextBoxDictionary.xaml" />
                <ResourceDictionary Source="/Dictionary/RadButtonsDictionary.xaml" />
                <ResourceDictionary Source="/Dictionary/TextBlocksDictionary.xaml" />
				<ResourceDictionary Source="/Dictionary/IconsDictionary.xaml"/>

            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Window">
                <Setter Property="FontFamily"
                        Value="{StaticResource Vazirmatn FD}" />
            </Style>

            <Style TargetType="Page">
                <Setter Property="FontFamily"
                        Value="{StaticResource Vazirmatn FD}" />
            </Style>
        </ResourceDictionary>
