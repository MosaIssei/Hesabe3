        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="/Dictionary/FontsDictionary.xaml" />
                <ResourceDictionary Source="/Dictionary/Windows11ThemeDic.xaml" />
